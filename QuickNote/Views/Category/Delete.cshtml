@model QuickNote.Models.CategoryModels.CategoryDetail

@{
    ViewBag.Title = "Delete";
}

@if (User.Identity.IsAuthenticated)
{

<h2 class="text-center">Are you sure you want to delete this?</h2>
<div class="">
    
    <hr />
 <div class="card bg-dark text-center w-25">
     <div class="card-header font-weight-bolder">
         @Html.DisplayNameFor(model => model.CategoryName)
     </div>
     <div class="card-body">
         @Html.DisplayFor(model=>model.CategoryName)
     </div>
     <div class="card-footer">
         @using (Html.BeginForm())
         {
             @Html.AntiForgeryToken()

             <div class="form-actions no-color text-center">
                 <input type="submit" value="Delete" class="btn btn-danger" /> |
                 @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
             </div>
         }
     </div>
 </div>

    
</div>
}
else
{
    <h3 class="text-center">Please sign in to manage Categories</h3>
}