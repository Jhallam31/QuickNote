@model IEnumerable<QuickNote.Models.CategoryModels.CategoryListItem>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">All Categories</h2>


<table class="table table-dark table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoteCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoteCount)
        </td>
        <td class="text-right">
            @Html.ActionLink("Edit", "Edit", new {  id=item.CategoryId  }, htmlAttributes: new { @class = "btn btn-warning btn-sm" }) |
            @Html.ActionLink("Details", "Details", new {  id=item.CategoryId }, htmlAttributes: new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("Delete", "Delete", new {id=item.CategoryId }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
<p class="text-center">
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-outline-light " })
</p>